  - var baseUrl = '../'

block content
    main.multimedia.multimedia--standalone
        section.multimedia__search
            +searchbox('Buscá videos por palabra clave (Ej. Messi)')
                        
        section.multimedia__video-single
            .container
                .row
                    .col-xs-24.col-md-18.col-md-offset-3
                        .multimedia__video-single__player
